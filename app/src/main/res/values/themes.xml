<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="Theme.AAR" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:textColorSecondary">@color/abu</item>
        <item name="colorPrimary">@color/biru</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor">@color/orange_primary</item>

        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:unselectedAlpha">@color/black</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="tabStyle">@style/Widget.App.TabLayout</item>

    </style>

    <style name="backgroundmain" >
        <item name="android:background">@color/white</item>
    </style>
    <color name="bottom_nav_item_selected">@color/orange_primary</color>
    <color name="bottom_nav_item_unselected">@color/black</color>
    <style name="ShapeAppearance.App.Corner.Small" parent="">
        <item name="cornerFamily">rounded</item>


        <item name="cornerSize">4dp</item>
    </style>
    <style name="ShapeAppearance.App.CornerRadius" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
    <style name="Widget.App.TabLayout" parent="Widget.MaterialComponents.TabLayout.Colored">

        <item name="tabRippleColor">@color/orange_primary</item>
    </style>

</resources>